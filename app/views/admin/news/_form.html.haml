= form_for [:admin, @news] do |f|
  = f.error_messages
  %p
    = f.label :title, "Заголовок"
    %br
    = f.text_field :title
  %p
    = f.label :note, "Аннотация"
    %br
    = f.text_area :note, :rows=>"10", :cols=>"100"
  %p
    = f.label :desc, "Текст новости"
    %br
    = f.cktext_area :desc, :language => 'ru'
  %p
    = f.submit "Сохранить новость"
