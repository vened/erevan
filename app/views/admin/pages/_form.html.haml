= form_for [:admin, @page] do |f|
  = f.error_messages
  %p
    = f.label :meta_key
    %br
    = f.text_field :meta_key
  %p
    = f.label :meta_desc
    %br
    = f.text_field :meta_desc
  %p
    = f.label :title
    %br
    = f.text_field :title
  %p
    = f.label :desc
    %br
    = f.cktext_area :desc, :language => 'ru'
  %p
    = f.submit
