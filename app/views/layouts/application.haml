-# encoding: utf-8
!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml", "xml:lang" => "ru", :lang => "ru"}

  %head
    %title= title
    %meta{"http-equiv"=>"Content-Type", :content=>"text/html; charset=utf-8"}
    %meta{:content => meta_key, :name => "keywords"}
    %meta{:content => meta_desc, :name => "description"}
    = stylesheet_link_tag "admin"
    = javascript_include_tag "jquery.min"
    = javascript_include_tag "rails"
    = javascript_include_tag "admin"
    = javascript_include_tag :ckeditor
    = csrf_meta_tag

  %body
    - flash.each do |name, msg|
      #flash_notice
        = content_tag :b
        = content_tag :div, "закрыть", :id => "close"
        = content_tag :div, msg, :id => "desc"
    #container
      #header
        %h1
          %a{:href => "/admin"} Админка
        #user-navigation{:style => "top:15px"}
          %ul.wat-cf
            -if user_signed_in?
              %li
                %b Вы вошли как
              %li
                %b= current_user.email
              %li
                %b= link_to "Выйти", destroy_user_session_path

            %li
              %a{:href => "/", :target => "_blank"} Перейти на сайт
      #wrapper.wat-cf
        #main
          #block-text.block
            .content
              =yield


        #sidebar
          .block
            %h3 Страницы
            .content
              %ul#SideMenu
                %li
                  %a{:href => "/admin"} Бронирование столов
                %li
                  %a{:href => "/admin/pages"} Статические страницы
                %li
                  %a{:href => "/admin/feedbacks"} Отзывы

                %li
                  %a{:href => "/admin/menus"} Меню ресторана
                  %ul
                    %li
                      %a{:href => "/admin/menu_categories"} Категории блюд ресторана

                %li
                  %a{:href => "/admin/menus"} Меню шашлычного дворика
                  %ul
                    %li
                      %a{:href => "/admin/menu_categories"} Категории блюд шашлычного дворика