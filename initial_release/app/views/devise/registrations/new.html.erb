<h2>Регистрация(необходима для обработки вашего заказа)</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <p><%= f.label :username, :Логин %><br/>
      <%= f.text_field :username %></p>

    <p><%= f.label :email %><br/>
      <%= f.email_field :email %></p>

    <p><%= f.label :password, "Пароль" %><br/>
      <%= f.password_field :password %></p>

    <p>
      <%= f.label :password_confirmation, "Повторите пароль" %><br/>
      <%= f.password_field :password_confirmation %>
    </p>

    <p>
      <%= f.label :surname, :Фамилия %><br/>
      <%= f.text_field :surname %>
    </p>
    <p>
      <%= f.label :name, :Имя %><br/>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :lastname, :Отчество %><br/>
      <%= f.text_field :lastname %>
    </p>
    <p>
      <%= f.label :phone, "Номер телефона" %><br/>
      <%= f.text_field :phone %>
    </p>

    <p><%= f.submit "Зарегистрироваться" %></p>
<% end %>